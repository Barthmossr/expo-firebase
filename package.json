{
  "name": "expo-firebase",
  "version": "1.0.0",
  "description": "A production-ready Expo with Firebase template",
  "main": "dist/main.js",
  "author": "Barthmossr",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Barthmossr/expo-firebase.git"
  },
  "keywords": [
    "react-native",
    "expo",
    "firebase",
    "typescript",
    "template",
    "boilerplate"
  ],
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/app/main.ts",
    "dev:watch": "tsx watch src/app/main.ts",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --write --check .",
    "clean": "rimraf dist coverage",
    "validate": "npm run lint && npm run format:check && npm run typecheck && npm run build",
    "check": "ncu -ui",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "bugs": {
    "url": "https://github.com/Barthmossr/expo-firebase/issues"
  },
  "homepage": "https://github.com/Barthmossr/expo-firebase#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.2.0",
    "prettier": "3.7.4",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "tsdown": "^0.17.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": "24.12.0"
  }
}
