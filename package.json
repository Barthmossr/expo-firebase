{
  "name": "expo-firebase",
  "version": "1.0.0",
  "description": "A production-ready Expo with Firebase template",
  "main": "expo-router/entry",
  "author": "Barthmossr",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Barthmossr/expo-firebase.git"
  },
  "keywords": [
    "react-native",
    "expo",
    "firebase",
    "typescript",
    "template",
    "boilerplate"
  ],
  "type": "module",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:device": "expo run:ios --device",
    "web": "expo start --web",
    "prebuild": "expo prebuild",
    "prebuild:clean": "expo prebuild --clean",
    "build:dev:android": "eas build --profile development --platform android",
    "build:dev:ios": "eas build --profile development --platform ios",
    "build:preview:android": "eas build --profile preview --platform android",
    "build:preview:ios": "eas build --profile preview --platform ios",
    "build:prod:android": "eas build --profile production --platform android",
    "build:prod:ios": "eas build --profile production --platform ios",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "firebase:deploy:firestore": "firebase deploy --only firestore:rules --project expo-firebase-46af7",
    "firebase:deploy:database": "firebase deploy --only database --project expo-firebase-46af7",
    "firebase:deploy:storage": "firebase deploy --only storage --project expo-firebase-46af7",
    "firebase:deploy:functions": "cd functions && npm run deploy",
    "firebase:deploy": "firebase deploy --only firestore:rules,database,storage --project expo-firebase-46af7",
    "firebase:deploy:all": "npm run firebase:deploy && npm run firebase:deploy:functions",
    "format": "prettier --write .",
    "format:check": "prettier --write --check .",
    "clean": "rimraf dist coverage android ios",
    "validate": "npm run lint && npm run format:check && npm run typecheck",
    "check": "ncu -ui",
    "test": "jest --silent",
    "test:verbose": "jest",
    "test:watch": "jest --watch --silent",
    "test:coverage": "jest --coverage --silent",
    "test:coverage:verbose": "jest --coverage",
    "prepare": "husky"
  },
  "bugs": {
    "url": "https://github.com/Barthmossr/expo-firebase/issues"
  },
  "homepage": "https://github.com/Barthmossr/expo-firebase#readme",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@react-native-firebase/analytics": "^23.7.0",
    "@react-native-firebase/app": "^23.7.0",
    "@react-native-firebase/auth": "^23.7.0",
    "@react-native-firebase/crashlytics": "^23.7.0",
    "@react-native-firebase/functions": "^23.7.0",
    "@react-native-google-signin/google-signin": "^16.1.1",
    "expo": "~54.0.30",
    "expo-build-properties": "^1.0.10",
    "expo-constants": "^18.0.12",
    "expo-dev-client": "~6.0.20",
    "expo-linking": "~8.0.11",
    "expo-router": "^6.0.21",
    "expo-secure-store": "^15.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "^6.0.9",
    "react": "19.1.0",
    "react-hook-form": "^7.69.0",
    "react-native": "0.81.5",
    "react-native-google-mobile-ads": "^16.0.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "^4.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@ngneat/falso": "^8.0.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^25.0.9",
    "@types/react": "19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.16",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.2.0",
    "prettier": "3.7.4",
    "react-test-renderer": "19.1.0",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "engines": {
    "node": "22"
  },
  "overrides": {
    "react-dom": "19.1.0"
  }
}
